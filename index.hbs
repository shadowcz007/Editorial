        <article id="banner">
            <div class="content">
                <header>
                    <h1><a href="{{url}}">{{title}}</a></h1>
                    {{#if custom_excerpt}}<p>{{custom_excerpt}}</p>{{/if}}
                </header>
                {{content words="42"}}
                <ul class="actions">
                    <li><a href="{{url}}" class="button big">æ›´å¤šğŸš€</a></li>
                </ul>
            </div>
            {{#if feature_image}}
            <a href="{{url}}" class="image object">
                <img src="{{img_url feature_image}}" alt="{{title}}" />
            </a>
            {{/if}}
        </article>
    {{/foreach}}
{{/get}}
{{/is}}

