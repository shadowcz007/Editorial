{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}


{{!-- Featured Post --}}
{{#is "home"}}
{{#get "posts" filter="featured:true" limit="1" as |featured_post|}}
    {{#foreach featured_post visibility="all"}}
        <article id="banner">
            <div class="content">
                <header>
                    <h1><a href="{{url}}">{{title}}</a></h1>
                    {{#if custom_excerpt}}<p>{{custom_excerpt}}</p>{{/if}}
                </header>
                {{content words="42"}}
                <ul class="actions">
                    <li><a href="{{url}}" class="button big">更多🚀</a></li>
                </ul>
            </div>
            {{#if feature_image}}
            <a href="{{url}}" class="image object">
                <img src="{{img_url feature_image}}" alt="{{title}}" />
            </a>
            {{/if}}
        </article>
    {{/foreach}}
{{/get}}
{{/is}}

{{!-- Posts --}}
<section>

    <header class="major">
        <h2></h2>
    </header>

    <section class="posts">
        {{#foreach posts visibility="all"}}
        <article>
            {{#if feature_image}}
            <a href="{{url}}" class="image fit"><img src="{{img_url feature_image}}" alt="{{title}}" /></a>
            {{/if}}
            <h3><a href="{{url}}">{{title}}</a></h3>
            <p>{{excerpt words="33"}}</p>
            <ul class="actions special">
                <li><a href="{{url}}" class="button">查看</a></li>
            </ul>
        </article>
        {{/foreach}}
    </section>

</section>

{{!-- Pagination --}}
{{pagination}}

<script>
    (()=>{
        var texts=["无尽学习者","跨领域创新","交叉学科指南"];
        document.querySelector(".major h2").innerText=texts[parseInt(Math.random()*texts.length)];
    })();
</script>

